  }

  .job-list-item h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
  }

  .job-list-item a {
    text-decoration: none;
    color: #2c974b;
  }

  .job-list-item a:hover {
    text-decoration: underline;
  }

  .company {
    color: #666;
    font-weight: 500;
    margin: 0.25rem 0;
  }

  .salary {
    color: #2c974b;
    font-weight: 600;
    margin: 0.25rem 0;
  }

  .date {
    color: #666;
    font-size: 0.9rem;
    margin: 0.25rem 0 0 0;
  }
</style> 